{
    "name": "gosuperscript/schema",
    "description": "A PHP library for data transformation, type validation, and expression evaluation.",
    "type": "library",
    "license": "proprietary",
    "keywords": ["php", "schema", "validation", "coercion", "types"],
    "require": {
        "php": "^8.4",
        "ext-intl": "*",
        "azjezz/psl": "^3.2 || ^4.0",
        "brick/math": "^0.12.0 || ^0.13.0",
        "gosuperscript/monads": "^1.0.0",
        "illuminate/container": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "sebastian/exporter": "^6.0 || ^7.0"
    },
    "require-dev": {
        "infection/infection": "^0.29.14",
        "laravel/pint": "^1.22",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "robiningelbrecht/phpunit-coverage-tools": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Superscript\\Schema\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Superscript\\Schema\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:types": "vendor/bin/phpstan analyse",
        "test:unit": "vendor/bin/phpunit -d --min-coverage=100",
        "test:infection": "vendor/bin/infection --threads=max --show-mutations",
        "test": [
            "@test:types",
            "@test:unit",
            "@test:infection"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        },
        "platform": {
            "php": "8.4.0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
